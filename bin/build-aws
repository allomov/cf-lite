#!/bin/bash

bosh_lite_ami=$1
cf_release_version=$2
box_version=$3

function main() {
  rm -rf $(dirname $0)/../output-amazon-ebs

  args="-var 'bosh_lite_ami=$bosh_lite_ami' -var 'cf_release_version=$cf_release_version' -var 'build_number=$box_version'"

  template_path=$(dirname $0)/../templates/aws.json

  sh -c "packer build $args $template_path"
}

main
